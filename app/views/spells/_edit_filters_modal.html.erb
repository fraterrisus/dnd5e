<%= tag.div(id: 'filter-modal', class: %w(modal fade), tabindex: '-1', role: 'dialog',
            aria: { hidden: true, labelledby: 'filter-modal-label' }) do %>
  <%= tag.div(class: %w(modal-dialog)) do %>
    <%= tag.form(id: 'filter-form', class: %w(form), role: 'form') do %>
      <%= tag.input(type: 'hidden', name:'spell[utf8]', value: 'âœ“') %>
      <%= tag.div(class: %w(modal-content)) do %>

        <%= tag.div(class: %w(modal-header)) do %>
          <%= tag.h5('Filter Spells', id: 'filter-modal-label', class: %w(modal-title)) %>
          <%= tag.button(type: 'button', class: %w(btn-close), 'data-bs-dismiss': 'modal',
                         aria: { label: 'close' }) %>
        <% end %>

        <%= tag.div(class: %w(modal-body)) do %>
          <%= tag.div(class: %w(mb-3)) do %>
            <%= tag.label(t('helpers.label.spell.class_id'), class: %w(form-label), for: 'spell_caster_class_ids') %>
            <%= select_tag('spell[caster_class_ids]',
                           options_from_collection_for_select(CasterClass.order(:name), :id, :name),
                           multiple: true, class: %w(form-control)) %>
          <% end %>
          <%= tag.div(class: %w(mb-3)) do %>
            <%= tag.label(t('helpers.label.spell.school_id'), class: %w(form-label), for: 'spell_school_id') %>
            <%= select_tag('spell[school_id]',
                           options_for_select(SpellSchool.options_for_select),
                           multiple: true, class: %w(form-control)) %>
          <% end %>
          <%= tag.div(class: %w(mb-3)) do %>
            <%= tag.label(t('helpers.label.spell.level'), class: %w(form-label), for: 'spell_level') %>
            <%= select_tag('spell[level]',
                           options_for_select([['Cantrip', 0]] + (1..9).zip( (1..9).to_a) ),
                           multiple: true, class: %w(form-control)) %>
          <% end %>

          <%= tag.div(class: %w(mb-3)) do %>
            <%= tag.label(t('helpers.label.spell.cast_unit'), class: %w(form-label), for: 'spell_cast_unit') %>
            <%= select_tag('spell[cast_unit]',
                           options_for_select(TimeUnit.options_for_select),
                           multiple: true, class: %w(form-control)) %>
          <% end %>
          <%= tag.div(class: %w(mb-3)) do %>
            <%= tag.label(t('helpers.label.spell.ritual'), class: %w(form-label), for: 'spell_ritual') %>
            <%= select_tag('spell[ritual]',
                           options_for_select([['yes', 't'], ['no', 'f']]),
                           multiple: true, class: %w(form-control)) %>
          <% end %>
          <%= tag.div(class: %w(mb-3)) do %>
            <%= tag.label(t('helpers.label.spell.range_unit'), class: %w(form-label), for: 'spell_range_unit') %>
            <%= select_tag('spell[range_unit]',
                           options_for_select(DistanceUnit.options_for_select),
                           multiple: true, class: %w(form-control)) %>
          <% end %>
          <%= tag.div(class: %w(mb-3)) do %>
            <%= tag.label(t('helpers.label.spell.components'), class: %w(form-label), for: 'spell_components') %>
            <%= select_tag('spell[components]',
                           options_for_select([['Verbal', 8], ['Somatic', 4], ['Material', 2], ['Focus', 1]]),
                           multiple: true, class: %w(form-control)) %>
          <% end %>
          <%= tag.div(class: %w(mb-3)) do %>
            <%= tag.label(t('helpers.label.spell.duration_unit'), class: %w(form-label), for: 'spell_duration_unit') %>
            <%= select_tag('spell[duration_unit]',
                           options_for_select(TimeUnit.options_for_select),
                           multiple: true, class: %w(form-control)) %>
          <% end %>
          <%= tag.div(class: %w(mb-3)) do %>
            <%= tag.label(t('helpers.label.spell.concentration'), class: %w(form-label), for: 'spell_concentration') %>
            <%= select_tag('spell[concentration]',
                           options_for_select([['yes', 't'], ['no', 'f']]),
                           multiple: true, class: %w(form-control)) %>
          <% end %>
          <%= tag.div(class: %w(mb-3)) do %>
            <%= tag.div('Breakout tabs', class: %w(form-label)) %>
            <%= tag.div(class: %w(form-check)) do %>
              <%= tag.input(id: 'spell_sort_by_name', name: 'spell[sort_by_level]',
                            class: %w(form-check-input), type: 'radio', value: '0', checked: true) %>
              <%= tag.label('Name', class: %w(form-check-label), for: 'spell_sort_by_name') %>
            <% end %>
            <%= tag.div(class: %w(form-check)) do %>
              <%= tag.input(id: 'spell_sort_by_level', name: 'spell[sort_by_level]',
                            class: %w(form-check-input), type: 'radio', value: '1') %>
              <%= tag.label('Level', class: %w(form-check-label), for: 'spell_sort_by_level') %>
            <% end %>
          <% end %>
        <% end %>

        <%= tag.div(class: %w(modal-footer)) do %>
          <%= tag.button('Cancel', type: 'button', class: %w(btn btn-outline-secondary),
                         'data-bs-dismiss': 'modal') %>
          <%= tag.button('Update Filters', type: 'button', id: 'filter-modal-ok',
                         class: %w(btn btn-primary), 'data-bs-dismiss': 'modal') %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
