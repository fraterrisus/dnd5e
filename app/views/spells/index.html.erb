<% content_for :head do %>
  <%= javascript_pack_tag 'spells' %>
<% end %>

<%= tag.h1(t('page-titles.spells.list'), id: 'spells-index') %>

<%= tag.div(id: 'spells-card', class: %w(card)) do %>
  <%= tag.div(class: %w(card-header)) do %>
    <%= tag.div(class: %w(btn-group), role: 'group', aria: { label: 'cycle' }) do %>
      <%= tag.button(t('page-titles.spells.filter'), id: 'filter-button', class: %w(btn btn-primary)) %>
    <% end %>
    <%= render partial: 'loading_spinner' %>
    <%= tag.div(id: 'result-metadata', class: %w()) do %>
      <%= tag.div(id: 'result-metadata-filters', class: %w(mt-2)) %>
      <%= tag.div(id: 'result-metadata-count', class: %w(mt-2 fst-italic)) %>
    <% end %>
  <% end %>
  <%= tag.div(class: %w(results)) %>
<% end %>

<%= render partial: 'spells/detail_modal' %>
<%= render partial: 'spells/edit_filters_modal' %>
<%= tag.div(id: 'editspell-modal', class: %w(modal fade), tabindex: '-1', role: 'dialog',
            aria: { hidden: true, labelledby: 'editspell-label' }) %>
