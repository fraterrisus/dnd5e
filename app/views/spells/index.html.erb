<% content_for :head do %>
  <%= javascript_pack_tag 'spells' %>
<% end %>

<%= tag.h1('Spell List', id: 'spells-index') %>
<%= tag.button('Filter', id: 'filter-btn', class: %w(btn btn-primary),
               data: { toggle: 'modal', target: '#narrowing-modal' }) %>
<%= tag.div(id: 'spells-results', class: %w(results)) %>

<%= render partial: 'spells/detail_modal' %>
<%= render partial: 'spells/edit_filters_modal' %>
<%= tag.div(id: 'editspell-modal', class: %w(modal fade), tabindex: '-1', role: 'dialog',
            aria: { hidden: true, labelledby: 'editspell-label' }) %>
