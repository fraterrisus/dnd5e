<% content_for :head do %>
  <%= javascript_pack_tag :caster_classes %>
<% end %>

<%= tag.h1('Caster Classes') %>

<%= tag.div(style: 'margin-top: 12px;') do %>
  <%= tag.button('New Caster Class', class: %w(btn btn-primary), type: 'button',
                 data: { toggle: 'modal', target: '#newclass-modal' }) %>
<% end %>

<%= tag.div(id: 'cclass-results', class: 'results') %>

<%= bootstrap_modal('newclass', CasterClass, 'New Caster Class') do |form| %>
  <%= content_tag(:div, class: %w(form-group row)) do %>
    <%= content_tag(:div, class: %w(col-xs-12 col-sm-12)) do %>
      <%= form.label(:name) %>
      <%= form.text_field(:name, class: 'form-control') %>
    <% end %>
  <% end %>
<% end %>
