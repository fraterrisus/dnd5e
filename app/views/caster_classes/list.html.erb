<%= tag.div(class: %w(card-body)) do %>
  <%= tag.div(class: %w(list-group)) do %>
    <% @cclasses.each do |cc| %>
      <%= tag.div(class: %w(list-group-item), 'data-object-id': cc.id) do %>
        <%= tag.i(class: %w(bi bi-eye-fill text-primary view-button), title: 'Edit Spells') %>
        <%= tag.i(class: %w(bi bi-pencil-fill text-primary edit-button), title: 'Edit Caster') %>
        <%= tag.i(class: %w(bi bi-trash-fill text-primary delete-button), title: 'Delete caster') %>
        <%= tag.span(cc.nym, class: %w(ms-3), id: 'class-nym') %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
