<%= content_for :head do %>
  <%= javascript_include_tag :characters %>
<% end %>

<%= tag.h1(t('page-titles.character.list')) %>

<%= tag.div(class: %w(card)) do %>
  <%= tag.div(class: %w(card-header)) do %>
    <%= tag.div(class: %w(card-title mb-0)) do %>
      <%= tag.button(t('page-titles.character.create'), class: %w(btn btn-primary new-button)) %>
      <%= render partial: 'loading_spinner' %>
    <% end %>
  <% end %>
  <%= tag.div(class: %w(card-body)) do %>
    <%= tag.div(class: 'results') %>
  <% end %>
<% end %>

<%= tag.div(id: 'object-modal', class: %w(modal fade), tabindex: '-1', role: 'dialog',
            aria: { hidden: true, labelledby: 'object-modal-label' }) %>
<%= tag.div(id: 'object-delete-modal', class: %w(modal fade), tabindex: '-1', role: 'dialog',
            aria: { hidden: true, labelledby: 'object-delete-label' }) %>
