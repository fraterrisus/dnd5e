<% content_for :head do %>
  <%= javascript_pack_tag 'combat' %>
<% end %>

<%= tag.h1(t('page-titles.combatants.list')) %>

<%= tag.div(class: %w(col-sm-12 col-md-8 col-lg-6)) do %>
  <%= tag.div(id: 'initiative-control', class: %w(card)) do %>
    <%= tag.div(class: %w(card-header)) do %>
      <%= tag.div(class: %w(btn-group), role: 'group', aria: { label: 'cycle' }) do %>
        <%= tag.button(t('button-labels.turn'), id: 'next-turn-btn', class: %w(btn btn-primary)) %>
      <% end %>
      <%= tag.div(class: %w(btn-group), role: 'group', aria: { label: 'modify combatants '}) do %>
        <%= tag.button(t('button-labels.create'), id: 'new-btn', class: %w(btn btn-outline-success)) %>
        <%= tag.button(t('button-labels.clear'), id: 'clear-btn', class: %w(btn btn-outline-secondary)) %>
        <%= tag.button(t('button-labels.import'), id: 'import-btn', class: %w(btn btn-outline-secondary)) %>
      <% end %>
      <%= render partial: 'loading_spinner' %>
    <% end %>
    <%= tag.div(class: %w(card-body)) do %>
      <%= tag.div(id: 'initiative-list', class: 'list-group') %>
    <% end %>
  <% end %>

<% end %>

<%= tag.div(id: 'object-modal', class: %w(modal fade), tabindex: '-1', role: 'dialog',
            aria: { hidden: true, labelledby: 'object-modal-label' }) %>
