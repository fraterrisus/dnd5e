<%= 
nav_bar fixed: :top, brand: 'D&amp;D5e Reference'.html_safe, responsive: true, inverse: true do
  menu_group do
    menu_item('Spells', spells_path) <<
    drop_down('Dropdown') do
      drop_down_header('Header') <<
      menu_item('Item 1', '#') <<
      menu_item('Item 2', '#') <<
      menu_divider <<
      menu_item('Item 3', '#')
    end
  end <<
  menu_group(pull: :right) do
    if @user
      menu_item('Logout', '#')
    else
      form_for(User.new, url: root_path, method: 'post', html: { class: %q( navbar-form pull-right ) }) do |f|
        content_tag(:li) do
          f.text_field(:email) << ' ' <<
          f.password_field(:password) << ' ' <<
          f.submit('Login')
        end
      end
    end
  end
end
%>
