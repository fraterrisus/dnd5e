<%= tag.div(id: 'dicebar', class: %w(collapse shadow rounded)) do %>
  <%= tag.div(class: %w(card)) do %>
    <%= tag.div(class: %w(card-header)) do %>
      <%= tag.h5('Die Roller') %>
    <% end %>
    <%= tag.div(class: %w(card-body)) do %>
      <%= tag.form(class: %w(form), role: 'form') do %>
        <%= tag.div(id: 'dicebar-adv', class: %w(row mb-3)) do %>
          <%= tag.div(class: %w(col-4)) do %>
            <%= tag.div('Advantage:', class: %w(form-label-inline)) %>
          <% end %>
          <%= tag.div(class: %w(col)) do %>
            <%= tag.div(class: %w(form-check form-check-inline)) do %>
              <%= tag.input(class: 'form-check-input', type: 'radio', name: 'adv', id: 'adv_-1', value: -1) %>
              <%= tag.label('&ndash;'.html_safe, class: 'form-check-label', for: 'adv_-1') %>
            <% end %>
            <%= tag.div(class: %w(form-check form-check-inline)) do %>
              <%= tag.input(class: 'form-check-input', type: 'radio', name: 'adv', id: 'adv_0', value: 0, checked: true) %>
              <%= tag.label('0', class: 'form-check-label', for: 'adv_0') %>
            <% end %>
            <%= tag.div(class: %w(form-check form-check-inline)) do %>
              <%= tag.input(class: 'form-check-input', type: 'radio', name: 'adv', id: 'adv_1', value: 1) %>
              <%= tag.label('+', class: 'form-check-label', for: 'adv_1') %>
            <% end %>
          <% end %>
        <% end %>

        <%= tag.div(id: 'dicebar-numdice', class: %w(row mb-3)) do %>
          <%= tag.label('Number of dice', for: 'numdice', class: %w(sr-only)) %>
          <%= tag.div(class: %w(col)) do %>
            <%= tag.div(class: %w(input-group)) do %>
              <%= tag.button(type: 'button', id: 'numdice-minone',
                class: %w(btn btn-secondary bi bi-dash)) %>
              <%= tag.input(id: 'numdice', class: %w(form-control), type: 'text', value: '1') %>
              <%= tag.button(type: 'button', id: 'numdice-plsone',
                class: %w(btn btn-secondary bi bi-plus)) %>
            <% end %>
          <% end %>
        <% end %>

        <%= tag.div(id: 'dicebar-sides', class: %w(row)) do %>
          <%= tag.div(class: %w(col)) do %>
            <%= tag.div(class: %w(btn-group)) do %>
              <%= tag.button('d4', type: 'button', id: 'roll-4', class: %w(btn btn-outline-secondary)) %>
              <%= tag.button('d6', type: 'button', id: 'roll-6', class: %w(btn btn-outline-secondary)) %>
              <%= tag.button('d8', type: 'button', id: 'roll-8', class: %w(btn btn-outline-secondary)) %>
              <%= tag.button('d10', type: 'button', id: 'roll-10', class: %w(btn btn-outline-secondary)) %>
              <%= tag.button('d12', type: 'button', id: 'roll-12', class: %w(btn btn-outline-secondary)) %>
              <%= tag.button('d20', type: 'button', id: 'roll-20', class: %w(btn btn-outline-primary)) %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <%= tag.div('&nbsp;Result:'.html_safe, id: 'dicebar-result', class: %w(card-footer)) %>
  <% end %>
<% end %>
